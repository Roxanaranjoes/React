{
  "name": "react",
  "private": true,
  "version": "0.1.0",
  "engines": { "node": "^20" },
  "packageManager": "pnpm@9",
  "scripts": {
    "prepare": "husky install",
    "dev": "pnpm --filter ./apps/00-basics dev",
    "build": "pnpm -r build",
    "preview": "pnpm --filter ./apps/00-basics preview",
    "test": "pnpm -r test",
    "test:watch": "pnpm -r test:watch",
    "lint": "eslint . --ext .ts,.tsx,.js,.mjs,.cjs",
    "format": "prettier --write .",
    "storybook": "pnpm --filter @react-lab/ui storybook",
    "build-storybook": "pnpm --filter @react-lab/ui build-storybook"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "postcss": "^8.4.38",
    "prettier": "^3.3.2",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.5.2"
  }
}
